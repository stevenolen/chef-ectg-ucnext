# Generated by Chef for <%= node[:fqdn] %>

upstream next {
  server 127.0.0.1:<%= @port %> fail_timeout=10s;
}

<% if @bridge_enabled %>
upstream httpd {
  server 127.0.0.1:8080 fail_timeout=10s;
}
<% end %>

##LISTEN ON HTTPS##
server {
  server_name <%= @fqdn %>;
  listen 443;
  ssl on;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_certificate /etc/ssl/certs/<%= @fqdn %>.crt;
  ssl_certificate_key /etc/ssl/private/<%= @fqdn %>.key;
  root <%= @path %>;
  index index.html;
  client_body_buffer_size 100m;
  client_max_body_size 100m;

<% if @bridge_enabled %>
  location ~ \/(ds|Shibboleth.sso|shibboleth-sp) {
   proxy_pass http://httpd;
   proxy_read_timeout  600s;
   proxy_set_header X-Real-IP $remote_addr;
   proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
   proxy_set_header Host $http_host;
   proxy_set_header X-Forwarded-Proto https;
   proxy_set_header X-Forwarded-Ssl on;
  }

  location /oauth2 {
   proxy_pass http://httpd;
   proxy_read_timeout  600s;
   proxy_set_header X-Real-IP $remote_addr;
   proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
   proxy_set_header Host $http_host;
   proxy_set_header X-Forwarded-Proto https;
   proxy_set_header X-Forwarded-Ssl on;
  }
<% end %>

  location / {
   proxy_pass http://next;
   proxy_read_timeout  600s;
   proxy_set_header X-Real-IP $remote_addr;
   proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
   proxy_set_header Host $http_host;
   proxy_set_header X-Forwarded-Proto https;
   proxy_set_header X-Forwarded-Ssl on;
  }
}

##REDIRECT ALL HTTP REQUESTS TO HTTPS##
server {
  listen 80;
  return 301 https://$host$request_uri;
}

<% if node[:fqdn] == 'ucnext.org' %>
## hack to redirect www users
server {
  server_name www.ucnext.org;
  listen 80;
  return 301 https://ucnext.org$request_uri;
}

server {
  server_name www.ucnext.org;
  listen 443;
  ssl on;
  ssl_certificate /etc/ssl/certs/ucnext.org.crt;
  ssl_certificate_key /etc/ssl/private/ucnext.org.key;
  return 301 $scheme://ucnext.org$request_uri;
}
<% end %>
